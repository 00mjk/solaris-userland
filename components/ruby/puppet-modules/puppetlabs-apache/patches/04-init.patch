Patch to add Solaris specific elements to the main Apache
configuration file.  This patch has not yet been submitted upstream.

--- puppetlabs-apache-1.8.1/manifests/init.pp.orig	2016-02-09 08:53:22.000000000 -0800
+++ puppetlabs-apache-1.8.1/manifests/init.pp	2016-04-26 09:36:14.315166408 -0700
@@ -305,6 +305,11 @@
         $scriptalias          = '/usr/lib/cgi-bin'
         $access_log_file      = 'access.log'
       }
+      'solaris': {
+        $error_log            = 'error_log'
+        $scriptalias          = '/var/apache2/2.4/cgi-bin/'
+        $access_log_file      = 'access_log'
+      }
       default: {
         fail("Unsupported osfamily ${::osfamily}")
       }
